<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<filter>
		<filter-name>UsuarioLogadoFilter</filter-name>
		<display-name>usuarioLogado</display-name>
		<filter-class>br.com.avaliacaojavajr.webtest.servlet.UsuarioLogadoFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>UsuarioLogadoFilter</filter-name>
		<url-pattern>/cadProduto.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>UsuarioLogadoFilter</filter-name>
		<url-pattern>/cadUsuario.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>UsuarioLogadoFilter</filter-name>
		<url-pattern>/header.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>UsuarioLogadoFilter</filter-name>
		<url-pattern>/listUsuario.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>UsuarioLogadoFilter</filter-name>
		<url-pattern>/index.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>UsuarioLogadoFilter</filter-name>
		<url-pattern>/menu.jsp</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>UsuarioServlet</servlet-name>
		<servlet-class>br.com.avaliacaojavajr.webtest.servlet.UsuarioSerlvet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ProdutoServlet</servlet-name>
		<servlet-class>br.com.avaliacaojavajr.webtest.servlet.ProdutoServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<display-name>LoginServlet</display-name>
		<servlet-class>br.com.avaliacaojavajr.webtest.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UsuarioServlet</servlet-name>
		<url-pattern>/usuario</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ProdutoServlet</servlet-name>
		<url-pattern>/produto</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/error.jsp</location>
	</error-page>
</web-app>
